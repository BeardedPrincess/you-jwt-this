# EditorConfig is awesome: https://editorconfig.org
# Root-level EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override settings for Makefile
[Makefile]
indent_style = tab

[*.html]
indent_style = space